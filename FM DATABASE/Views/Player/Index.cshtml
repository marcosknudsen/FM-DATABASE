@{
    ViewData["Title"] = "Players";
}

<h1>Players</h1>
<a asp-action="Create" class="btn btn-primary">Create new player</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fullname</th>
            <th>Club</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var player in Model)
        {
            <tr>
                <td>@player.Id</td>
                <td>@player.FirstName @player.LastName</td>
                <td>@player.ClubName</td>
                <td style="text-align:right">
                    <a class="btn btn-primary" asp-route-id="@player.Id" asp-action="Edit">Edit</a>
                    <a class="btn btn-danger" asp-route-id="@player.Id" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>