@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<a asp-action="Create" class="btn btn-primary">Create new country</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Code</td>
                <td>@country.Name</td>
                <td style="text-align:right">
                    <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-primary">
                        <i class="bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@country.Id" class="btn btn-danger">
                        <i class="bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>